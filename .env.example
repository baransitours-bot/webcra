# Immigration Platform - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM API KEYS
# =============================================================================
# OpenRouter (FREE models available)
OPENROUTER_API_KEY=

# OpenAI (Alternative - paid)
OPENAI_API_KEY=

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Provider: openrouter or openai
LLM_PROVIDER=openrouter

# Model selection (FREE options)
# OpenRouter FREE: google/gemini-2.0-flash-001:free, meta-llama/llama-3.2-3b-instruct:free
# OpenAI: gpt-4o-mini, gpt-3.5-turbo
OPENROUTER_MODEL=google/gemini-2.0-flash-001:free
OPENAI_MODEL=gpt-4o-mini

# LLM Parameters
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_PATH=data/immigration.db

# =============================================================================
# CRAWLER SETTINGS
# =============================================================================
# Delay between requests (seconds)
CRAWLER_DELAY=2.0

# Maximum pages per country
CRAWLER_MAX_PAGES=50

# Maximum depth
CRAWLER_MAX_DEPTH=3

# =============================================================================
# EMBEDDINGS
# =============================================================================
# Model for semantic search (local, free)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Default country for UI
DEFAULT_COUNTRY=australia
